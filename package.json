{
  "name": "@lopatnov/express-reverse-proxy",
  "email": "oleksandr@lopatnov.cv.ua",
  "version": "2.0.0",
  "description": "Node.js CLI tool to serve static front-end files with a reverse proxy for back-end APIs",
  "type": "module",
  "author": "lopatnov",
  "main": "server.js",
  "bin": {
    "express-reverse-proxy": "./server.js"
  },
  "keywords": [
    "reverse",
    "proxy",
    "javascript",
    "express",
    "node",
    "cli",
    "static-server",
    "spa",
    "development"
  ],
  "scripts": {
    "start": "node ./server.js",
    "demo:backends": "concurrently \"node demo/server-a.js\" \"node demo/server-b.js\"",
    "demo:proxy": "node ./server.js --config ./demo/server-config.json",
    "demo": "concurrently \"npm run demo:backends\" \"npm run demo:proxy\"",
    "test": "start-server-and-test demo http://localhost:8080 cypress:run",
    "test:open": "start-server-and-test demo http://localhost:8080 cypress:open",
    "cypress:run": "cypress run",
    "cypress:open": "cypress open",
    "lint": "biome check .",
    "format": "biome format --write .",
    "pm2-start": "pm2 start ecosystem.config.cjs --no-daemon",
    "pm2-stop": "pm2 stop express-reverse-proxy",
    "pm2-status": "pm2 status",
    "pm2-logs": "pm2 logs --lines 200",
    "pm2-monitor": "pm2 monit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lopatnov/express-reverse-proxy.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/lopatnov/express-reverse-proxy/issues"
  },
  "homepage": "https://lopatnov.github.io/express-reverse-proxy/",
  "files": [
    "**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "express": "^5.2.1",
    "express-http-proxy": "^2.1.2",
    "morgan": "^1.10.1",
    "path": "^0.12.7",
    "pm2": "^6.0.14"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "concurrently": "^9.2.1",
    "cypress": "^15.10.0",
    "start-server-and-test": "^2.1.3"
  }
}
